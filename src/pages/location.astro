---
import Layout from "../layouts/Layout.astro";
import InteractiveMap from "../components/islands/InteractiveMap";

// Mock event location
const eventLocation = {
  latitude: 40.416775, // Madrid, Spain coordinates
  longitude: -3.703790,
  zoom: 13,
  eventName: "AstroTickets Festival"
}
---

<Layout 
  title="Ubicación | AstroTickets"
  description="Encuentra la ubicación exacta de nuestro festival AstroTickets y planifica tu visita."
  ogTitle="Ubicación del Festival | AstroTickets"
  ogDescription="Encuentra la ubicación exacta de nuestro festival AstroTickets y planifica tu visita."
  ogImage="/social_preview.jpg"
>
  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-6xl font-black mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">Ubicación del Evento</h1>
    <p class="text-lg md:text-xl text-base-content font-semibold max-w-2xl mx-auto opacity-100">Encuéntranos en el corazón de la ciudad. Fácil acceso, estacionamiento y la mejor atmósfera.</p>
  </div>

  <div class="max-w-6xl mx-auto px-4">
    <!-- Neon Border / Glass Container -->
    <div class="relative group rounded-3xl p-1 bg-gradient-to-r from-primary via-secondary to-primary bg-[length:200%_200%] animate-gradient-xy shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary blur-xl opacity-20 group-hover:opacity-40 transition-opacity duration-500"></div>
        
        <div class="relative bg-base-100/80 backdrop-blur-xl rounded-[1.3rem] overflow-hidden border border-base-content/30 p-2">
            <div class="h-[600px] w-full rounded-xl overflow-hidden relative z-10">
                <InteractiveMap 
                    client:only="react"
                    latitude={eventLocation.latitude} 
                    longitude={eventLocation.longitude} 
                    zoom={eventLocation.zoom} 
                    eventName={eventLocation.eventName}
                />
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4 p-4">
                <div class="flex items-center gap-3 p-3 rounded-lg bg-base-200">
                    <div class="p-2 bg-primary/10 rounded-full text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                    </div>
                    <div>
                        <h2 class="font-bold text-sm">Dirección</h3>
                        <p class="text-xs text-base-content font-medium">Calle Principal 123, Madrid</p>
                    </div>
                </div>
                <div class="flex items-center gap-3 p-3 rounded-lg bg-base-200">
                    <div class="p-2 bg-secondary/10 rounded-full text-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                    </div>
                    <div>
                        <h2 class="font-bold text-sm">Teléfono</h3>
                        <p class="text-xs text-base-content font-medium">+34 641 60 79 24</p>
                    </div>
                </div>
                <div class="flex items-center gap-3 p-3 rounded-lg bg-base-200">
                    <div class="p-2 bg-accent/10 rounded-full text-accent">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                    </div>
                    <div>
                        <h2 class="font-bold text-sm">Email</h3>
                        <p class="text-xs text-base-content font-medium break-all">albertoguindasevilla@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>

<style>
    @keyframes gradient-xy {
        0%, 100% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
    }
    .animate-gradient-xy {
        animation: gradient-xy 6s ease infinite;
    }
</style>

  <div class="mt-12 text-center">
      <h2 class="text-3xl font-semibold mb-4">Cómo Llegar</h2>
      <p class="text-base-content font-semibold opacity-100">
          El {eventLocation.eventName} se celebra en el centro de Madrid. Puedes llegar en metro (líneas 1, 2, 3), autobús o tren de cercanías. Hay aparcamiento limitado disponible, por lo que recomendamos el transporte público.
      </p>
      <a 
        href={`https://www.google.com/maps/search/?api=1&query=${eventLocation.latitude},${eventLocation.longitude}`} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="btn btn-primary mt-6"
      >
        Abrir en Google Maps
      </a>
  </div>
</Layout>